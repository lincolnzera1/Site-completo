{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button type="submit" class="btn btn-success mt-4">Leia mais</button></a>
        <hr>
        <small>Data de publicação: {{data}}</small><br>
        
    </div>
</div>
{{else}}
    <h5>Nenhuma postagem. =/</h5>
{{/each}}